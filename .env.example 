# Configuración de entorno para la aplicación de Balance Eléctrico

# URL de la API GraphQL (backend)
REACT_APP_API_URL=http://localhost:4000
REACT_APP_GRAPHQL_URL=http://localhost:4000/graphql

# URL de la API de REE
REACT_APP_REE_API_URL=https://apidatos.ree.es/es/datos/balance/balance-electrico

# Configuración para desarrollo
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug

# Configuración de fechas por defecto (para el periodo inicial)
REACT_APP_DEFAULT_DAYS_RANGE=30

# Control de características
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_THEME_SWITCH=false

# Configuración de caché
REACT_APP_CACHE_DURATION=3600000

# Configuración de frecuencia de actualización (en milisegundos)
REACT_APP_AUTO_REFRESH_INTERVAL=60000

# Nombre de la aplicación
REACT_APP_NAME="Balance Eléctrico España"

# Configuración para los source maps
GENERATE_SOURCEMAP=true

# Puerto para servidor de desarrollo
PORT=3000
